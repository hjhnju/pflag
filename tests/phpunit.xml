<phpunit colors="true" bootstrap="bootstrap.php" convertErrorsToExceptions="true"
        convertNoticesToExceptions="true" convertWarningsToExceptions="true">
    <testsuites>
        <testsuite name="pflag-lib">
            <directory>./library/</directory>
        </testsuite>
        <testsuite name="pflag-web">
            <directory>./admin/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="testdox-html" target="report.html"/>
    </logging>
</phpunit>
